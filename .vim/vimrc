syntax on
set background=dark
" Jump to last open
if has("autocmd")
  au BufReadPost * if line("'\"") > 1 && line("'\"") <= line("$") | exe "normal! g'\"" | endif
endif

"Indentation rules for language
if has("autocmd")
  filetype plugin indent on
endif

"Base vim setup
set showcmd
set showmatch
set ignorecase
set smartcase
set wrap
set tabstop=4
set backspace=indent,eol,start
set autoindent
set copyindent
set shiftwidth=4
set number
set expandtab
set title
set noerrorbells


"fix term colors to be more pretty
set term=xterm-256color

"==>all fancy plugin/magic stuff<==
"load plugins
execute pathogen#infect()
call pathogen#helptags()

filetype plugin on

let g:NERDSpaceDelims = 1
let g:NERDCompactSexyComs = 1
let g:NERDDefaultAlign = 'left'
let g:NERDCommentEmptyLines = 1
let g:NERDTrimTrailingWhitespace = 1

colorscheme molokai

"open nerdtree
map <C-n> :NERDTreeFocus<CR>

"fix airline in more than split
:set laststatus=2

"some systems need the : for the size
"set guifont=Fantasque\ Sans\ Mono:h10

set guifont=Fantasque\ Sans\ Mono\ 10


"if filereadable("/etc/vim/vimrc.local")
"  source /etc/vim/vimrc.local
"endif

